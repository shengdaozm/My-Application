<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ScrollView
            android:layout_width="160dp"
            android:layout_height="match_parent" tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="60dp"
            tools:layout_editor_absoluteX="-4dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="设置"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:fontFamily="@font/gotham"
                    android:id="@+id/leftmenutext" android:focusable="true"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/btnhistoy"
                        android:layout_width="41dp"
                        android:layout_height="@dimen/top_bar_height"
                        android:focusable="true"
                        android:contentDescription="refresh"
                        android:padding="11dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_wenhao"
                        android:background="#01000000"
                />
                <TextView
                        android:text="新页面"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="119dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/btnStart"
                        android:layout_width="41dp"
                        android:layout_height="@dimen/top_bar_height"
                        android:focusable="true"
                        android:contentDescription="refresh"
                        android:padding="11dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_wenhao"
                        android:background="#01000000"
                />
                <TextView
                        android:text="历史记录"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="119dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/btnFav"
                        android:layout_width="41dp"
                        android:layout_height="@dimen/top_bar_height"
                        android:focusable="true"
                        android:contentDescription="refresh"
                        android:padding="11dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_wenhao"
                        android:background="#01000000"
                />
                <TextView
                        android:text="添加收藏"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="119dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/btnStart"
                        android:layout_width="41dp"
                        android:layout_height="@dimen/top_bar_height"
                        android:focusable="true"
                        android:contentDescription="refresh"
                        android:padding="11dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_wenhao"
                        android:background="#01000000"
                />
                <TextView
                        android:text="我的收藏"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="119dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/btnStart"
                        android:layout_width="41dp"
                        android:layout_height="@dimen/top_bar_height"
                        android:focusable="true"
                        android:contentDescription="refresh"
                        android:padding="11dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_wenhao"
                        android:background="#01000000"
                />
                <TextView
                        android:text="账号"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="119dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="无图模式"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="113dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
                <Switch
                        android:text="Switch"
                        android:layout_width="50dp"
                        android:layout_height="51dp" android:id="@+id/switch1" android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="无痕浏览"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="113dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
                <Switch
                        android:text="Switch"
                        android:layout_width="wrap_content"
                        android:layout_height="51dp" android:id="@+id/switch1" android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>