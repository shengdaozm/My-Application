<?xml version="1.0" encoding="utf-8"?>
<androidx.slidingpanelayout.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     xmlns:tools="http://schemas.android.com/tools"
                                                     android:background="@color/white"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:gravity="center_horizontal"
                                                     tools:context=".MainActivity" tools:ignore="MissingClass">
    <ScrollView
            android:layout_width="160dp"
            android:layout_height="match_parent" tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="60dp"
            tools:layout_editor_absoluteX="-4dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="设置"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:fontFamily="@font/gotham"
                    android:id="@+id/leftmenutext" android:focusable="true"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/btnStart"
                        android:layout_width="41dp"
                        android:layout_height="@dimen/top_bar_height"
                        android:focusable="true"
                        android:contentDescription="refresh"
                        android:padding="11dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/newpage"
                        android:background="#01000000"
                />
                <TextView
                        android:text="新页面"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="119dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/btnhistory"
                        android:layout_width="41dp"
                        android:layout_height="@dimen/top_bar_height"
                        android:focusable="true"
                        android:contentDescription="refresh"
                        android:padding="11dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/history"
                        android:background="#01000000"
                />
                <TextView
                        android:text="历史记录"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="119dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/btnStart"
                        android:layout_width="41dp"
                        android:layout_height="@dimen/top_bar_height"
                        android:focusable="true"
                        android:contentDescription="refresh"
                        android:padding="11dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/add_collections"
                        android:background="#01000000"
                />
                <TextView
                        android:text="添加收藏"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="119dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/btnStart"
                        android:layout_width="41dp"
                        android:layout_height="@dimen/top_bar_height"
                        android:focusable="true"
                        android:contentDescription="refresh"
                        android:padding="11dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/collections"
                        android:background="#01000000"
                />
                <TextView
                        android:text="我的收藏"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="119dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/btn_download"
                        android:layout_width="41dp"
                        android:layout_height="@dimen/top_bar_height"
                        android:focusable="true"
                        android:contentDescription="refresh"
                        android:padding="11dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_download"
                        android:background="#01000000"
                />
                <TextView
                        android:text="界面下载"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="119dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/btnStart"
                        android:layout_width="41dp"
                        android:layout_height="@dimen/top_bar_height"
                        android:focusable="true"
                        android:contentDescription="refresh"
                        android:padding="11dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/account"
                        android:background="#01000000"
                />
                <TextView
                        android:text="账号"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="119dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="无图模式"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="113dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
                <Switch
                        android:text="Switch"
                        android:layout_width="50dp"
                        android:layout_height="51dp" android:id="@+id/switch1" android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="无痕浏览"
                        android:gravity="center"
                        android:fontFamily="@font/gotham"
                        android:layout_width="113dp"
                        android:clickable="true"
                        android:layout_height="match_parent" android:id="@+id/textView2"/>
                <Switch
                        android:text="Switch"
                        android:layout_width="wrap_content"
                        android:layout_height="51dp" android:id="@+id/switch1" android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

<!--    主页面的中心布局-->
    <LinearLayout
            android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#fafafa"
                  android:hardwareAccelerated="true"
                  android:orientation="vertical"
                  tools:context="com.webpage.webpage">

        <!-- 顶部地址栏 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_height"
                android:orientation="horizontal"
                android:background="@drawable/top_bar_bg">
            <ImageView
                    android:id="@+id/webIcon"
                    android:layout_width="@dimen/top_bar_height"
                    android:layout_height="@dimen/top_bar_height"
                    android:contentDescription="favicon"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="11dp"
                    android:clickable="true"
                    android:src="@drawable/internet"
                    android:background="#01000000"/>
            <EditText
                    android:id="@+id/textUrl"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:background="#01000000"
                    android:hint="@string/input_url"
                    android:imeOptions="actionGo"
                    android:inputType="textUri"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:textColor="#606060"
                    android:textColorHint="#9f9f9f"/>
            <ImageButton
                    android:id="@+id/btnStart"
                    android:layout_width="41dp"
                    android:layout_height="@dimen/top_bar_height"
                    android:focusable="true"
                    android:contentDescription="refresh"
                    android:padding="11dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/refresh"
                    android:background="#01000000"
            />
        </LinearLayout>

        <!-- 浏览器容器区域 -->
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="#d1d1d1">

            <!-- 网页进度条 -->
            <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:max="100"
                    android:progress="50" />
        </FrameLayout>
    </LinearLayout>

</androidx.slidingpanelayout.widget.SlidingPaneLayout>