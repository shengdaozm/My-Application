<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7A1EA1"
                android:clipChildren="false">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/circle_translucent"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/circle_translucent"
            android:id="@+id/imageView5"
            android:layout_below="@+id/imageView2"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"/>

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/circle_translucent"
            android:id="@+id/imageView"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            android:layout_marginTop="38dp"/>

    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/circle_translucent"
            android:id="@+id/imageView3"
            android:layout_above="@+id/imageView2"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/circle_translucent"
            android:id="@+id/imageView4"
            android:layout_marginTop="36dp"
            android:layout_alignTop="@+id/imageView5"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"/>


    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Got it!"
            android:layout_marginTop="161dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignRight="@+id/imageView" android:layout_marginRight="-73dp"
            android:layout_marginEnd="-73dp" android:layout_alignEnd="@+id/imageView"/>
    <TextView

            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy parallax"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="@color/cardview_light_background"
            android:layout_alignParentBottom="true" android:layout_marginBottom="200dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="113dp" android:layout_marginEnd="113dp"/>
    <TextView

            android:id="@+id/text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Supply a layout and parallax effects will automatically be applied"
            android:textSize="20sp"

            android:textColor="@color/cardview_light_background"
            android:layout_alignParentBottom="true" android:layout_marginBottom="119dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="-25dp" android:layout_marginEnd="-25dp"/>

</RelativeLayout>